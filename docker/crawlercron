SHELL=/bin/bash
PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

# Cron job for crawler: run at 09:00 and 21:00 daily
0 9,23 * * * root cd /app && source /app/.env && python -m crawler.cli.crawl -s /data >> /var/log/cron.log 2>&1

# Every minute: write to test file
# * * * * * root echo "TEST" >> /data/test.txt
